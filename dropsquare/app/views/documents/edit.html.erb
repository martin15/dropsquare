<div class="container">
  <h3>Edit Document</h3>
  <%= form_for( @document, :url => document_path(:id => @folder.id, :document_id => @document.id),
                :html => { :multipart => true, :class => "form-horizontal"}) do |f| %>
    <div class="form-group" style="margin-bottom: 30px;">
      <div class="col-sm-12">
        <% if %w{jpg png jpg gif bmp}.include?(@document.file_name.file.extension.downcase) %>
          <%= image_tag @document.file_name.url(:medium) %>
        <% else %>
          <td colspan="2">
            <%= link_to @document.file_name.file.filename, @document.file_name.url, :target => "_blank" %>
          </td>
        <% end %>
      </div>
    </div>
    <%= render :partial => 'form', :locals => { :f => f} %>
    <div class="form-group">
      <div class="col-sm-2">&nbsp;</div>
      <div class="col-sm-10">
        <%= f.submit :class => "btn btn-success" %>
        <%= link_to 'Back', documents_path, :class => "btn btn-info" %>
      </div>
    </div>
  <% end %>
</div>
